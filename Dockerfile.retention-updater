FROM node:20-slim

ENV TZ=Etc/UTC \
    NODE_ENV=production

RUN apt-get update && \
    apt-get install -y \
    bash \
    curl \
    tini \
    && rm -rf /var/lib/apt/lists/*

RUN mkdir -p /var/log/app && \
    chown -R node:node /var/log/app

WORKDIR /app

COPY package*.json ./
RUN npm ci --only=production

COPY retention_updater.js ./
COPY config/retentionConfig.json ./config/

USER node

ENTRYPOINT ["/usr/bin/tini", "--"]
CMD ["node", "retention_updater.js"]
